# AI Board Environment Configuration

# OpenAI Configuration
VITE_OPENAI_ENABLED=true

# Storage Configuration
VITE_STORAGE_PROVIDER=local
VITE_MINIO_ENDPOINT=http://localhost:9000
VITE_MINIO_BUCKET=ai-board

# GitHub Integration
VITE_GITHUB_ENABLED=true
# GITHUB_PAT=your_personal_access_token_here

# GitHub OAuth Configuration (Alternative to PAT)
VITE_GITHUB_OAUTH_CLIENT_ID=your_oauth_client_id_here
VITE_GITHUB_OAUTH_REDIRECT_URI=http://localhost:5173/auth/github/callback
VITE_GITHUB_OAUTH_SCOPE=repo,user:email

# Development Settings
VITE_ENABLE_DEBUG=false
VITE_API_TIMEOUT=30000

# Analytics (Optional)
VITE_ANALYTICS_ENABLED=false
VITE_ERROR_TRACKING_ENABLED=false

# Security (Production)
# VITE_FORCE_HTTPS=true
# VITE_CSP_ENABLED=true

# Note: Copy this file to .env.local and configure your actual values
# Never commit .env.local or any file containing real API keys!